#include<iostream.h>
#include<conio.h>
class num
{
int n;
public: void getdata();
            void check();
};
void  num::getdata()
{
 cout<<"Enter a number:";
 cin>>n;
}
void num::check()
{
 if(n%2==0)
  cout<<"::: EVEN :::";
 else
  cout<<"::: ODD :::";
}
void main()
{
 num n1;
 n1.getdata();
 n1.check();
 getch();
}
